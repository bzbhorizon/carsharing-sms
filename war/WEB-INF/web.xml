<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>SMSEntryServlet</servlet-name>
		<servlet-class>bzb.gae.SMSEntryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SMSEntryServlet</servlet-name>
		<url-pattern>/info</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>EndOfJourneyChecker</servlet-name>
		<servlet-class>bzb.gae.summer.EndOfJourneyChecker</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EndOfJourneyChecker</servlet-name>
		<url-pattern>/cron/checkGroups</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StateServlet</servlet-name>
		<servlet-class>bzb.gae.summer.StateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StateServlet</servlet-name>
		<url-pattern>/summer/state</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>info</welcome-file>
	</welcome-file-list>
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
